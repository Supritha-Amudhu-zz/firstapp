<div class = "user_info">
	<a href = "<%= user_path(current_user) %>">
		<%= gravatar_for current_user,{:default=>nil, :size=>50, :rating=>"PG", :alt=>"", :title=>"", :class=>"gravatar", :ssl=>false, :fast=>false} %><br/><br/>
		<span class = "user_name">
			<%= current_user.name %>
		</span><br/>
		<span class = "microposts">
			<%= pluralize(current_user.microposts.count, "micropost") %>
		</span>
	</a>
</div>