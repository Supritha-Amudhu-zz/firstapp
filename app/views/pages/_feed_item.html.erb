<tr>
	<td class = "gravatar">
		<%= link_to (gravatar_for feed_item.user,{:default=>nil, :size=>50, :rating=>"PG", :alt=>"", :title=>"", :class=>"gravatar", :ssl=>false, :fast=>false}), feed_item.user %>
	</td>
	<td class = "micropost">
		<span class = "user">
			<%= link_to h(feed_item.user.name), feed_item.user %>
		</span>
		<span class = "content"><%= h feed_item.content %></span>
		<span class = "timestamp">
			Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		</span>
	</td>
	<% if current_user?(feed_item.user) %>
	<td>
		<%= link_to "delete", feed_item, :method => :delete, :confirm => "You sure?" %>
	</td>
	<% end %>
</tr>