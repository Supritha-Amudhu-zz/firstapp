<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <div class = "field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class = "field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class = "field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class = "field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class = "actions">
    <%= f.submit 'Update' %>
  </div>
<% end %>

